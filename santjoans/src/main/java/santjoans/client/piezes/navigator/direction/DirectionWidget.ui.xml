<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:santjoans.client.imagebutton">
	
	<ui:style>
		.vertical-panel-direccion {
			width:150px;
			height:150px;
			margin-left: 40px;
			margin-right: 40px;
		}
		.all-horizontal-direction-panel {
			width:150px;
			height:50px;
		}
	</ui:style>
	
	<g:VerticalPanel styleName='{style.vertical-panel-direccion}'>
		<g:cell>
			<g:HorizontalPanel styleName='{style.all-horizontal-direction-panel}'>
				<g:cell horizontalAlignment='ALIGN_CENTER' verticalAlignment='ALIGN_MIDDLE'>
					<b:ImageButton ui:field="up" />
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell>
			<g:HorizontalPanel styleName='{style.all-horizontal-direction-panel}'>
				<g:cell horizontalAlignment='ALIGN_LEFT' verticalAlignment='ALIGN_MIDDLE'>
					<b:ImageButton ui:field="left" />
				</g:cell>
				<g:cell horizontalAlignment='ALIGN_CENTER' verticalAlignment='ALIGN_MIDDLE'>
					<b:ImageButton ui:field="reset" />
				</g:cell>
				<g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment='ALIGN_MIDDLE'>
					<b:ImageButton ui:field="right" />
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell>
			<g:HorizontalPanel styleName='{style.all-horizontal-direction-panel}'>
				<g:cell horizontalAlignment='ALIGN_CENTER' verticalAlignment='ALIGN_MIDDLE'>
					<b:ImageButton ui:field="down" />
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
	
</ui:UiBinder> 