<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.canvas.client'>

	<ui:style>
	.vertical-panel {
		margin-top: 15px;
	}
	
	.canvas {
		border: 1px solid black;
		margin-left: 10px;
		margin-right: 10px;
	}
	</ui:style>

	<g:VerticalPanel styleName='{style.vertical-panel}'>
		<g:cell horizontalAlignment='ALIGN_CENTER'>
			<c:Canvas ui:field="gwtCanvas" styleName='{style.canvas}'>
			</c:Canvas>
		</g:cell>
		<g:cell horizontalAlignment='ALIGN_CENTER'>
			<g:CheckBox ui:field="checkBox">Sincronizar durante el movimiento</g:CheckBox>
		</g:cell>
	</g:VerticalPanel>

</ui:UiBinder> 