<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:santjoans.client.canvas">
	
	<ui:style>
		.vertical-panel {
			margin-top: 15px;
		}
		.canvas {
			border:1px solid black;
			margin-left: 10px;
			margin-right: 10px;
		}
	</ui:style>
	
	<g:VerticalPanel styleName='{style.vertical-panel}'>
		<g:cell horizontalAlignment='ALIGN_CENTER'>
			<d:GWTCanvasEventEnabled ui:field="gwtCanvas" styleName='{style.canvas}'>
			</d:GWTCanvasEventEnabled>
		</g:cell>
		<g:cell horizontalAlignment='ALIGN_CENTER'>
			<g:CheckBox ui:field="checkBox">Sincronizar durante el movimiento</g:CheckBox>
		</g:cell>
	</g:VerticalPanel>

</ui:UiBinder> 